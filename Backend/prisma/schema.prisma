generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Produto {
  id          String    @id @default(uuid())
  nome        String
  descricao   String
  preco       Float
  categoria   String    // "doce" ou "salgado"
  imagemUrl   String?
  disponivel  Boolean   @default(true)
  itensPedido ItemPedido[]

  @@map("produtos")
}

model Usuario {
  id      String   @id @default(uuid())
  nome    String
  email   String   @unique
  senha   String
  endereco String?
  telefone  String?
  pedidos Pedido[]

  @@map("usuarios")
}

model Pedido {
  id        String      @id @default(uuid())
  usuario   Usuario     @relation(fields: [usuarioId], references: [id])
  usuarioId String
  itens     ItemPedido[]
  precoTotal Float
  status    String      @default("pendente") // pendente, confirmado, enviado, entregue
  cupom     Cupom?      @relation(fields: [cupomId], references: [id])
  cupomId   String?
  data      DateTime    @default(now())

  @@map("pedidos")
}

model ItemPedido {
  id        String  @id @default(uuid())
  pedido    Pedido  @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  pedidoId  String
  produto   Produto @relation(fields: [produtoId], references: [id])
  produtoId String
  quantidade Int
  precoUnitario Float

  @@map("itens_pedido")
}

model Cupom {
  id            String   @id @default(uuid())
  codigo        String   @unique
  tipoDesconto  String   // "percentual" ou "fixo"
  valorDesconto Float
  dataValidade  DateTime
  ativo         Boolean  @default(true)
  pedidos       Pedido[]

  @@map("cupons")
}